<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:background="#f9f9f9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.ForgotPassward">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Passward"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"
            android:fontFamily="@font/playfair_display"
            android:layout_marginStart="25sp"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgottext"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginStart="25sp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passward"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginStart="25sp"
            android:layout_marginTop="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/newPassward"
            app:passwordToggleEnabled="true"

            android:transitionName="email_txt"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Passward"
                android:fontFamily="@font/ubuntu_medium"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-Passward"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginStart="25sp"
            android:layout_marginTop="30dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/confirmPassward"
            app:passwordToggleEnabled="true"
            android:transitionName="email_txt"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Passward"
                android:fontFamily="@font/ubuntu_medium"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Continue"
            android:transitionName="signup_btn"
            android:padding="18dp"
            android:fontFamily="@font/ubuntu_medium"
            android:id="@+id/resetPasswordBtn"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="100dp"/>



</LinearLayout>