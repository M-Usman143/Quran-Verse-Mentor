<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TeacherDetail">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViews">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/first_main_Layout"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleofscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Profile"
                android:textSize="30dp"
                android:fontFamily="@font/playfair_display"
                android:textStyle="bold"
                android:layout_gravity="center" />
            <ImageView
                android:id="@+id/tutor_image"
                android:layout_width="180dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/man"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hafiz Abdul Rehim"
                android:textSize="30dp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Online_Quran_Tutor"
                android:textSize="20dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                />


            <TextView
                android:id="@+id/header_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5 years Experience"
                android:textSize="20dp"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/blue"
                android:layout_gravity="center"
                />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:background="#009ACD"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/chatbutton"
                android:layout_marginTop="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:id="@+id/experience_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Qualification"
                    android:fontFamily="@font/playfair_display"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:layout_marginStart="15dp"
                    android:textSize="25dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tell_me_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Hifiz e Quran"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="20dp"
                android:padding="5dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/experience"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:id="@+id/fessofteacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/playfair_display"
                    android:text="Rate"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:textSize="25dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tell_me_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/ubuntu_medium"
                android:text="800/Month PKR"
                android:textSize="20dp"
                android:padding="10dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/certified"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:id="@+id/specilization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Spcilization"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/playfair_display"
                    android:layout_marginStart="15dp"
                    android:textSize="25dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                >

                <!-- Other views in your profile activity -->

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:flexWrap="wrap"
                    app:alignItems="stretch"
                    style="@style/CustomFontStyle"
                    app:alignContent="stretch"
                    app:justifyContent="flex_start"
                    app:showDivider="beginning|middle"
                    app:dividerDrawable="@drawable/tag_divider"
                    app:showDividerHorizontal="beginning">


                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">



                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/about"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:id="@+id/briefing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="About Yourself"
                    android:fontFamily="@font/playfair_display"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:textSize="25dp"
                    android:padding="20dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tell_mebriefing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Iam the good teaching experience at my own risk"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/ubuntu_medium"
                android:padding="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Reviews "
                    android:fontFamily="@font/playfair_display"
                    android:textStyle="bold"
                    android:padding="10dp"
                    android:textSize="30dp"/>


                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="(0)"
                    android:fontFamily="@font/playfair_display"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="30dp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:layout_below="@+id/tell_mebriefing"
                android:backgroundTint="@color/white"
                android:paddingBottom="60dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>