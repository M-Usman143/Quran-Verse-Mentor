<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#044227"
    tools:context=".activities.chatsActivity">

    <RelativeLayout
        android:id="@+id/header_chat_layouts"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp">

<ImageView
    android:layout_width="25sp"
    android:layout_height="25sp"
    android:src="@drawable/lists"
    android:layout_marginLeft="350dp"
    android:backgroundTint="@color/white"
    android:id="@+id/schedulemovingImg"
    android:layout_marginTop="25dp"
    />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/man"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"/>

        <!-- User Name -->
        <TextView
            android:id="@+id/text_view_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="25dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="80dp"
            android:textColor="@color/username_text_color"
            />

        <!-- Typing Indicator -->
        <TextView
            android:id="@+id/text_view_typing_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Typing..."
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_toEndOf="@id/image_view_profile"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="730dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/chatting_screen">

    <!-- RecyclerView for Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:backgroundTint="@color/white"
        android:paddingBottom="60dp"/>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/message_input_layout"
        android:layout_width="@dimen/_360sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_message"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/chating_edittext"
            android:hint="Type your message..."
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColorHint="#9C9C9C" />

    </LinearLayout>

<LinearLayout
    android:layout_width="@dimen/_50sdp"
    android:layout_height="@dimen/_50sdp"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginLeft="@dimen/_265sdp"
    android:id="@+id/message_send_button_layout"
    android:background="@drawable/chat_send_round_bg"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:visibility="visible">

    <!-- Send Button -->
    <ImageButton
        android:id="@+id/message_send_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_send"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Send"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        />

</LinearLayout>

</RelativeLayout>
