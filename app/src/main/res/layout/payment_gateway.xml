<!--                    />-->



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:background="#044227">


        <TextView
            android:id="@+id/text_view_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments"
            android:fontFamily="@font/playfair_display"
            android:textSize="30dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/image_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="180dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:elevation="20dp"
            android:background="@drawable/bg_layout_payment">

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/mastercard"
                />
            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:src="@drawable/visa"
                android:layout_marginLeft="@dimen/_10sdp"
                />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/bg_for_payment"
            android:layout_below="@+id/image_buttons_layout"
            android:backgroundTint="#fbfbfb">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_40sdp"
                android:id="@+id/second_Layouts"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/playfair_display"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="60dp"
                    android:id="@+id/amountEditText"
                    android:hint="  Rs 500.00"
                    android:fontFamily="@font/ubuntu_medium"
                    android:paddingStart="@dimen/_5sdp"
                    android:background="@drawable/bg_ed_payment"
                    android:layout_marginStart="25sp"
                    android:padding="5dp"
                    android:layout_marginEnd="25sp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/second_Layout"
                android:layout_below="@+id/second_Layouts">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Number"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/playfair_display"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="1234 2549 1237 1256"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/cardNumberEditText"
                    android:background="@drawable/bg_ed_payment"
                    android:layout_marginStart="25sp"
                    android:padding="5dp"
                    android:layout_marginEnd="25sp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/third_Layout"
                android:layout_below="@+id/second_Layout">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiry Date"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/playfair_display"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="06/28"
                        android:padding="10dp"
                        android:fontFamily="@font/ubuntu_medium"
                        android:id="@+id/expiryDateEditText"
                        android:background="@drawable/bg_ed_payment"
                        android:layout_marginStart="25sp"
                        android:layout_marginEnd="25sp"
                        android:layout_marginTop="10dp"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CVV"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/playfair_display"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:hint="658"
                        android:fontFamily="@font/ubuntu_medium"
                        android:padding="10dp"
                        android:id="@+id/cvvEditText"
                        android:background="@drawable/bg_ed_payment"
                        android:layout_marginStart="25sp"
                        android:layout_marginEnd="25sp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:id="@+id/fourth_Layout"
                android:layout_below="@+id/third_Layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card Holder"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:fontFamily="@font/playfair_display"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="Muhammad Usman"
                    android:background="@drawable/bg_ed_payment"
                    android:layout_marginStart="25sp"
                    android:padding="5dp"
                    android:fontFamily="@font/ubuntu_medium"
                    android:id="@+id/cardHolderEditText"
                    android:layout_marginEnd="25sp"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/fifith_layout"
                android:layout_below="@+id/fourth_Layout"
                android:layout_marginTop="12dp">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/saveCardDetailsCheckBox"
                    android:layout_marginStart="20dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Card Details"
                    android:fontFamily="@font/ubuntu_medium"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pay Now"
                android:layout_below="@id/fifith_layout"
                android:background="@color/black"
                android:id="@+id/payButton"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_30sdp" />
        </RelativeLayout>

    </RelativeLayout>


</ScrollView>




