<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.profileFragment"
    android:background="@color/white"
    android:id="@+id/first_Layout">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/playfair_display"
        android:text="Complete the Profile"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="27dp"
        android:layout_height="35dp"
        android:src="@drawable/arrows"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:id="@+id/backarrow"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="Qualifications"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textStyle="bold" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/Qualification"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="Tell about Qualification"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teaching Experience"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/teaching_experience"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="Your Experience"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/fees"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="Set your Monthly Fees"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specilization"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/Specilization"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="Your Specilization"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/country"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="Your Country"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/City"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="Your City"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brirg about Yourself"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="20dp"
            android:transitionName="email_txt"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="300"
            app:counterTextColor="@color/black"
            android:id="@+id/aboutyourself"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:textAlignment="textStart"
                android:elevation="200dp"
                android:background="#f5f3ed"
                android:hint="About yourself"
                android:textColorHint="@color/black"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="27dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <!--For items selection-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/corner_for_input_layout"
            android:layout_marginTop="10dp"
            android:id="@+id/spinner"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#f5f3ed"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/ubuntu_medium"
                android:layout_marginEnd="1dp"
                android:layout_marginTop="10dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front side of CNIC"
            android:fontFamily="@font/ubuntu_medium"
            android:textSize="27dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:text="Click to Select"
            android:id="@+id/frontCnicPIC"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="@color/black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Backside of CNIC"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp"
            android:text="Click to select"
            android:id="@+id/backCnicPIC"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="@color/black" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Certificate"
            android:textSize="27dp"
            android:fontFamily="@font/ubuntu_medium"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Click to select"
            android:layout_marginTop="12dp"
            android:id="@+id/certificate"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="@color/black"/>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Next"
            android:layout_marginTop="12dp"
            android:id="@+id/movingButton"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_marginLeft="80dp"
            />


    </LinearLayout>
    <!-- Blur overlay -->
    <FrameLayout
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="1600dp"
        android:background="#FFFFFF"
        android:visibility="gone">


        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="600dp"
            android:id="@+id/progressBar"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"/>

</RelativeLayout>

</ScrollView>