<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/firstLayouts">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Muhammad Usman"
    android:textSize="20dp"
    android:id="@+id/studentname"
    android:layout_marginStart="8dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jan 2024"
            android:textSize="15dp"
            android:id="@+id/feedbackdate"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_medium"/>
        <RatingBar
            android:id="@+id/ratingshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:saveEnabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:id="@+id/comments"
            android:textSize="20dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:id="@+id/likeemoji"
                android:src="@drawable/baseline_thumb_up_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/likeCounting"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                android:textColor="	#C8C8C8"
                android:textStyle="bold"
                android:fontFamily="@font/ubuntu_medium"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_thumb_down_24"
                android:layout_marginStart="32dp"
                android:id="@+id/dislikeemoji"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/dislkeCounting"
                android:layout_marginTop="2dp"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:textColor="#C8C8C8"
                android:textStyle="bold"
                android:fontFamily="@font/ubuntu_medium"/>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>